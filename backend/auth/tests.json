{
  "tests": [
    {
      "name": "Valid admin login",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "Admin2025!Secure"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "username": "admin",
        "role": "admin"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid credentials - wrong password",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid credentials"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid credentials - non-existent user",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "hacker",
        "password": "hack123"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid credentials"
      },
      "bodyMatcher": "partial"
    }
  ]
}